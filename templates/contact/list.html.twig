{% extends "base.html.twig" %}

{% block title %}
  {{type}} contacts 
{% endblock %}

{% macro controls(id) %}
  <div class="btn-group" role="group" aria-label="Basic example">
    <a href={{ path('view', {'id': id}) }} class="btn btn-success">View</a>
    <a href={{ path('edit', {'id': id}) }} class="btn btn-warning">Edit</a>
    <a href={{ path('delete', {'id': id}) }} class="btn btn-danger">Delete</a>
  </div>
{% endmacro %}

{% block stylesheets %}
  <link rel="stylesheet" href={{ asset('css/list.css') }}>
{% endblock %}

{% block content %}
  <h5 class="text-center" style="margin-bottom: 10px">{{type|capitalize}} contacts</h5>
  <div class="container-fluid">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Telephone</th>
          <th scope="col">Functions</th>
        </tr>
        </thead>
        <tbody>
        {% for key, contact in list %}
        <tr>
          <th scope="row">{{ contact.name }}</th>
          <td>{{ contact.lastName }}</td>
          <td>{{ contact.telephone }}</td>
          <td style="width:  9%">{{ _self.controls(contact.id) }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
{% endblock %}