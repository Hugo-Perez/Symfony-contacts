{% extends "base.html.twig" %}

{% block title %}
  {{type}} contacts 
{% endblock %}

{% macro controls(id) %}
  <div class="btn-group" role="group" aria-label="Basic example">
    <a href={{ path('view', {'id': id}) }} class="btn btn-success">View</a>
    <a href={{ path('edit', {'id': id}) }} class="btn btn-warning">Edit</a>
    <a href={{ path('delete', {'id': id}) }} class="btn btn-danger">Delete</a>
  </div>
{% endmacro %}

{% block stylesheets %}
  <link rel="stylesheet" href={{ asset('css/list.css') }}>
{% endblock %}

{% block content %}
  <h5 class="text-center" style="margin-bottom: 10px">{{type|capitalize}} contacts</h5>
  <div class="container-fluid">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Telephone</th>
          <th scope="col">Functions</th>
        </tr>
        </thead>
        <tbody>
        {% for contact in list %}
        <tr>
          <th scope="row">{{ contact.name }}</th>
          <td>{{ contact.lastName }}</td>
          <td>{{ contact.telephone }}</td>
          <td style="width:  9%">{{ _self.controls(contact.id) }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Open modal</button>
  <div class="modal fade" id="myModal" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Modal Heading</h4>
          <button type="button" class="close" data-dismiss="modal">Ã—</button>
        </div>
        <div class="modal-body"><p>Modal body text goes here.</p></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}